    <!-- STAGES TREE VIEW + MUTI_EDIT -->
    <record id="tms_mission_order_tree" model="ir.ui.view">
        <field name="name">mission.order.tree</field>
        <field name="model">mission.order</field>
        <field name="arch" type="xml">
            <tree string="Mission orders">
                <field name="name"/>
                <field name="date"/>
                <field name="main_carrier"/>
                <field name="substitued_carrier"/>
                <field name="driver"/>
                <field name="loading"/>
                <field name="loading_date"/>
                <field name="delivery"/>
                <field name="delivery_date"/>
                <field name="state"
                       widget="badge"
                       decoration-success="state=='done'"
                       decoration-info="state=='in_progress'" />
            </tree>
        </field>
    </record>

    <record id="tms_mission_order_form" model="ir.ui.view">
        <field name="name">mission.order.form</field>
        <field name="model">mission.order</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Mission orders">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable':1}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <field name="date"/>
                    </group>
                    <group col="4">
                        <field name="main_carrier" 
                        context="{'show_address': 1}"
                        options='{"always_reload": True, "highlight_first_line": True}'/>
                        <field name="substitued_carrier"
                        context="{'show_address': 1}"
                        options='{"always_reload": True, "highlight_first_line": True}'/>
                        <field name="driver"/>
                    </group>
                    <group col="4">
                        <field name="loading"
                        context="{'show_address': 1}"
                        options='{"always_reload": True, "highlight_first_line": True}'/>
                        <field name="loading_date"/>
                    </group>
                    <group col="4">
                        <field name="delivery"
                        context="{'show_address': 1}"
                        options='{"always_reload": True, "highlight_first_line": True}'/>
                        <field name="delivery_date"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                    <notebook>
                        <page string="Routes">
                            <group  col="4">
                                <field name="driving_time"/>
                                <field name="distance"/>
                            </group>
                            <group  col="4">
                                <field name="fuel_cost"/>
                                <field name="toll_cost"/>
                                <field name="total_cost"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tms_mission_order_action" model="ir.actions.act_window">
        <field name="name">Mission Orders</field>
        <field name="res_model">mission.order</field>
        <field name="view_id" ref="trivia_tms.tms_mission_order_tree"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Set a new stage in your opportunity pipeline
          </p><p>
            Stages allow salespersons to easily track how a specific opportunity
            is positioned in the sales cycle.
          </p>
        </field>
    </record>

    <menuitem id="menu_tms_mission_order_menu"
        parent="menu_mission_order_main"
        action="tms_mission_order_action"
        sequence="10"
        groups="base.group_no_one"/>

</odoo>
