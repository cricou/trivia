<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- STAGES TREE VIEW + MUTI_EDIT -->
    <record id="tms_trivia_tour_step_activity_tree" model="ir.ui.view">
        <field name="name">trivia.tour.step.activity.tree</field>
        <field name="model">trivia.tour.step.activity</field>
        <field name="arch" type="xml">
            <tree string="Tour Steps">
                <field name="activity_type"
                        widget="badge"
                        decoration-bf="activity_type in ['departure','arrival']"
                        decoration-success="activity_type=='pickup'"
                        decoration-warning="activity_type=='delivery'" 
                        decoration-info="activity_type in ['reload','break']"/>
                <field name="full_address"/>
                <field name="arrival_date"/>
                <field name="departure_date"/>
                <field name="state"
                       widget="badge"
                       decoration-success="state=='done'"
                       decoration-info="state=='in_progress'" />
            </tree>
        </field>
    </record>

    <record id="tms_trivia_tour_step_activity_form" model="ir.ui.view">
        <field name="name">trivia.tour.step.activity.form</field>
        <field name="model">trivia.tour.step.activity</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Tour Steps">
                <header>
                    <field name="state" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group col="4">
                        <field name="tour_step_id"/>
                    </group>
                    <group col="4">
                        <field name="activity_type"
                                widget="badge"
                                decoration-bf="activity_type in ['departure','arrival']"
                                decoration-success="activity_type=='pickup'"
                                decoration-warning="activity_type=='delivery'" 
                                decoration-info="activity_type in ['reload','break']"/>
                    </group>
                    <group col="4">
                        <field name="full_address"/>
                    </group>
                    <group col="4">
                        <field name="arrival_date"/>
                        <field name="departure_date"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <!-- Followers view -->
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <!-- Chatter view -->
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
