<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- STAGES TREE VIEW + MUTI_EDIT -->
    <record id="tms_trivia_tour_tree" model="ir.ui.view">
        <field name="name">trivia.tour.tree</field>
        <field name="model">trivia.tour</field>
        <field name="arch" type="xml">
            <tree string="Tours">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="vehicle_id"/>
                <field name="driving_time"/>
                <field name="distance"/>
                <field name="total_cost"/>
            </tree>
        </field>
    </record>

    <record id="tms_trivia_tour_form" model="ir.ui.view">
        <field name="name">trivia.tour.form</field>
        <field name="model">trivia.tour</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Tours">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_tour_step"
                                type="object" class="oe_stat_button" icon="fa-list">
                            <field name="tour_step_count" class="o_stat_value"/>
                            <span class="o_stat_text">Steps</span>
                        </button>
                        <button class="oe_stat_button" name="calc_tour_step" string="Calculate Tour" type="object" icon="fa-pin"/>
                        <button class="oe_stat_button" name="calc_full_routes" string="Calculate Routes" type="object" icon="fa-road"/>
                        <button class="oe_stat_button" name="google_map_url" string="Google map" type="object" icon="fa-map"/>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <label for="start_date" string="Date"/>
                    <div class="o_row">
                        <field name="start_date" widget="daterange" nolabel="1" class="oe_inline" options="{'related_end_date': 'end_date'}"/>
                        <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                        <field name="end_date" widget="daterange" nolabel="1" class="oe_inline" options="{'related_start_date': 'start_date'}"/>
                    </div>
                    <group col="4">
                        <field name="vehicle_id"/>
                        <field name="driver_id" readonly="1"/>
                    </group>
                    <group col="4">
                        <field name="start_position"/>
                        <field name="end_position"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                    <group string="Missions order">
                        <field name="mission_order_ids" nolabel="1">
                            <tree string="Missions order" default_order="sequence">
                                <field name='sequence' widget='handle'/>
                                <field name="name" />
                                <field name="loading"/>
                                <field name="delivery"/>
                                <field name="distance" sum="Total Distances"/>
                                <field name="total_cost" sum="Total Costs"/>
                            </tree>
                        </field>
                    </group>
                    
                    <notebook>
                        <page string="Routes">
                            <group col="4" attrs="{'invisible': [('includes_ferry','=',False)] }">
                                <field name="ferry_time" widget="float_time"/>
                                <field name="includes_ferry"/>
                            </group>
                            <group  col="4">
                                <field name="driving_time" widget="float_time"/>
                                <field name="distance"/>
                            </group>
                            <group  col="4">
                                <field name="fuel_cost"/>
                                <field name="toll_cost"/>
                                <field name="total_cost"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <!-- Followers view -->
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <!-- Chatter view -->
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
            
        </field>
    </record>

    <record id="tms_trivia_tour_action" model="ir.actions.act_window">
        <field name="name">Tours</field>
        <field name="res_model">trivia.tour</field>
        <field name="view_id" ref="trivia_tms.tms_trivia_tour_tree"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Set a new tour
          </p>
        </field>
    </record>

    <menuitem id="menu_tms_trivia_tour_menu"
        parent="menu_tour_main"
        action="tms_trivia_tour_action"
        sequence="20"/>

</odoo>
