<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- STAGES TREE VIEW + MUTI_EDIT -->
    <record id="tms_trivia_tour_tree" model="ir.ui.view">
        <field name="name">trivia.tour.tree</field>
        <field name="model">trivia.tour</field>
        <field name="arch" type="xml">
            <tree string="Tours">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="vehicle_id"/>
                <field name="driving_time"/>
                <field name="distance"/>
                <field name="total_cost"/>
            </tree>
        </field>
    </record>

    <record id="tms_trivia_tour_form" model="ir.ui.view">
        <field name="name">trivia.tour.form</field>
        <field name="model">trivia.tour</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Tours">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="google_map_url" string="Google map" type="object" icon="fa-map"/>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group col="4">
                        <field name="vehicle_id"/>
                        <field name="driver_id" readonly="1"/>
                    </group>
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group string="Missions order">
                        <field name="mission_order_ids" nolabel="1">
                            <tree string="Missions order" default_order="sequence">
                                <field name='sequence' widget='handle'/>
                                <field name="name" />
                                <field name="loading"/>
                                <field name="delivery"/>
                            </tree>
                        </field>
                    </group>
                    <notebook>
                        <page string="Routes">
                            <group  col="4">
                                <field name="driving_time" widget="float_time"/>
                                <field name="distance"/>
                            </group>
                            <group  col="4">
                                <field name="fuel_cost"/>
                                <field name="toll_cost"/>
                                <field name="total_cost"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
            
        </field>
    </record>

    <record id="tms_trivia_tour_action" model="ir.actions.act_window">
        <field name="name">Tours</field>
        <field name="res_model">trivia.tour</field>
        <field name="view_id" ref="trivia_tms.tms_trivia_tour_tree"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Set a new tour
          </p>
        </field>
    </record>

    <menuitem id="menu_tms_trivia_tour_menu"
        parent="menu_routes_main"
        action="tms_trivia_tour_action"
        sequence="10"/>

</odoo>
