<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- STAGES TREE VIEW + MUTI_EDIT -->
    <record id="app_trivia_tracking_location_tree" model="ir.ui.view">
        <field name="name">trivia.tracking.location.tree</field>
        <field name="model">trivia.tracking.location</field>
        <field name="arch" type="xml">
            <tree string="location">
                <field name="user_id"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="altitude"/>
                <field name="bearing"/>
                <field name="speed"/>
                <field name="time"/>
                <field name="accuracy"/>
            </tree>
        </field>
    </record>

    <record id="app_trivia_tracking_location_form" model="ir.ui.view">
        <field name="name">trivia.tracking.location.form</field>
        <field name="model">trivia.tracking.location</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="location">
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="latitude"/>
                        <field name="longitude"/>
                        <field name="altitude"/>
                        <field name="bearing"/>
                        <field name="speed"/>
                        <field name="time"/>
                        <field name="accuracy"/>
                    </group>
                </sheet>
            </form>
            
        </field>
    </record>

    <record id="app_trivia_tracking_location_action" model="ir.actions.act_window">
        <field name="name">Location</field>
        <field name="res_model">trivia.tracking.location</field>
        <field name="view_id" ref="trivia_app.app_trivia_tracking_location_tree"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Set a new location
          </p>
        </field>
    </record>

    <menuitem id="menu_app_trivia_tracking_location_menu"
        parent="menu_settings_data"
        action="app_trivia_tracking_location_action"
        sequence="20"/>

</odoo>
